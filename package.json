{
  "name": "uno",
  "version": "1.0.0",
  "description": "Juego Uno versiÃ³n multijugador",
  "main": "dist/server.js",
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "npm run build-ts && npm run build-main-ts && npm run tslint && npm run copy-static-assets",
    "serve": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve\"",
    "build-ts": "tsc",
    "build-main-ts": "browserify src/public/main.ts -p [tsify -p tsconfig2.json ] > dist/public/bundle.js",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "node copyStaticAssets.js",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johnf9896/uno.git"
  },
  "author": "Jhon Pedroza <jhonfpedroza@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/johnf9896/uno/issues"
  },
  "homepage": "https://github.com/johnf9896/uno#readme",
  "dependencies": {
    "dotenv": "^4.0.0",
    "express": "^4.15.4",
    "socket.io": "^2.0.3"
  },
  "devDependencies": {
    "@types/bootstrap": "^3.3.36",
    "@types/dotenv": "^4.0.1",
    "@types/express": "^4.0.37",
    "@types/jquery": "^3.2.12",
    "@types/socket.io": "^1.4.30",
    "@types/socket.io-client": "^1.4.30",
    "@types/toastr": "^2.1.35",
    "browserify": "^14.4.0",
    "concurrently": "^3.5.0",
    "nodemon": "^1.11.0",
    "shelljs": "^0.7.8",
    "tsify": "^3.0.3",
    "tslint": "^5.7.0",
    "typescript": "^2.5.2"
  }
}
